@model SWQT._640DataAccessAhk.Models.MOneMultiText
@{
    var strName = QT.SuperWebApp.ConstantValueProject.CVPartialView.PartialView.Ahk._PVOneCellDetailAhk.STR;
    if (strName == "")
    {
    }

    //int intIndexIncrease = -1;
    //string strTemp = "";

    //strTemp = "";
    //intIndexIncrease++;
    //if (Model.Length > intIndexIncrease)
    //{
    //    strTemp = Model[intIndexIncrease];
    //}

    //strTemp = "";
    //intIndexIncrease++;
    //if (Model.Length > intIndexIncrease)
    //{
    //    strTemp = Model[intIndexIncrease];
    //}
    string strCode = Model.StrCode;
    if (Model.LstChildMultiText.Count != 0)
    {
        strCode = Model.LstChildMultiText[Model.LstChildMultiText.Count-1].StrCode;
    }
    //int intSoDong = strCode.Split('\n').Length;
    //string strTitle = $"{Model.IntId}. " + Model.StrTitle + $" ({intSoDong} dòng)";
    string strTitle = $"{Model.IntId}. " + Model.StrTitle;

    string strNameGroupRadio = "nameGroupRadio" + Model.IntId;
    //string strIdTitleMultitextByIntId = QT.SuperWebApp.ConstantValueProject.CVIdHtml.Ahk.IdTitleMultitext.STR + Model.IntId;

}

<tr class="align-middle highlight">
    <td>

        <div class="d-flex justify-content-between align-items-center px-2">
            <p class="mb-0" title="@strCode">@strTitle</p>

            <div class="d-flex justify-content-between ">

                <div class="d-flex align-items-center  justify-content-center form-check form-switch">

                    <input class="classInputCheckboxSuDung form-check-input" title="Sử dụng đoạn code này để ghép " type="checkbox" checked="">

                </div>

            </div>

        </div>
        
        <div class="d-flex justify-content-between align-items-center px-2">
            <p class="mb-0" title="">...</p>

            <div class="d-flex justify-content-between ">

                <a class="classABtnShow btn btn-primary btn-sm collapse show" href="#">Chi tiết</a>
                
                <a class="classABtnHide btn btn-primary btn-sm collapse" href="#">Thu gọn</a>

            </div>

        </div>

        @if (Model.LstChildMultiText.Count==0)
        {

            <div class="card my-3 mx-1 position-relative px-0 ">
                <div class="position-absolute top-0 start-0  translate-middle-y d-flex justify-content-start">
                    <h6 class="bg-white px-1 divGroupboxMarginLeft">
                        
                    </h6>
                </div>



                <div class="card-body  py-0 px-1 divGroupboxMarginTop">

                    <pre class="preMaxHeight200 my-1 collapse">
                    <code>@strCode</code>
                    </pre>

                </div>

            </div>

        } else
        {
            for (int i = 0; i < Model.LstChildMultiText.Count; i++)
            {
                string strIdRadio = "idRadio" + (i + 1) + strNameGroupRadio;
                string strTitleNho = "" + Model.LstChildMultiText[i].StrTitle;
                string strLabelTitle = strTitleNho;
                if (strLabelTitle.Length>25)
                {
                    strLabelTitle = strLabelTitle.Substring(0, 25) + "...";
                }

                <div class="classDivRadioButton card my-3 mx-1 position-relative px-0 ">
                    <div class="position-absolute top-0 start-0  translate-middle-y d-flex justify-content-start">
                        <div class="bg-white px-1 divGroupboxMarginLeft">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="@strNameGroupRadio"
                                       id="@strIdRadio" checked="">
                                <label class="form-check-label" title="@strTitleNho" for="@strIdRadio">
                                    @(strLabelTitle)
                                </label>
                            </div>
                        </div>
                        
                    </div>



                    <div class="card-body  py-0 px-1 divGroupboxMarginTop">

                        <pre class="preMaxHeight200 my-1 collapse">
                        <code>@Model.LstChildMultiText[i].StrCode</code>
                            </pre>

                    </div>

                </div>

            }
        }

    </td>
</tr>

